<div id="form">
  <h2>Signup</h2>
  <form action="/signup" method="POST">
 
    <label> Username
      <input type="text" name="username" placeholder="ironhacker" required/>
    </label>
 
    <label> Password
      <input type="password" name="password" placeholder="********" />
    </label>
    
    <label> Email
      <input type="email" name="email" placeholder="user@ironhack.com" required/>
    </label>

    <% if(typeof errorMessage !== 'undefined') { %>
      <p class="error"><%= errorMessage %></p>
    <% } %>

    <button type="submit">Create account</button>
 
    <%#!-- error message will be added here --%>
  </form>
</div>